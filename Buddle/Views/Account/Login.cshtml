@using Buddle.Models.ViewModels;
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <h2 class="text-center mb-4">Be part of the community</h2>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <input asp-for="Email" class="form-control border shadow-sm" placeholder="Email or Username"
                    style="box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); outline: 2px solid #0000;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Password" class="form-control border shadow-sm" placeholder="Password"
                    style="box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); outline: 2px solid #0000;" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="float-end">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">
                    Forgot password?
                </a>
            </div>
            <div class="form-check mb-3">
                <label class="form-check-label">
                    <input asp-for="RememberMe" class="form-check-input" />
                    @Html.DisplayNameFor(a => a.RememberMe)
                </label>
            </div>
            <input type="submit" value="Login" class="btn btn-primary w-100 p-2"
                style="box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);" />
            <p class="mt-2">
                Don't have an account? <a asp-controller="Account" asp-action="Register"
                    class="text-decoration-none">Register</a>
            </p>
        </form>
    </div>
    <div class="text-center">
        <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Back</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
@using Buddle.Models.ViewModels;
@model VerifyEmailViewModel;

@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="d-flex vh-100 align-items-center justify-content-center bg-light">
    <div class="register-account-container text-center bg-white p-5 rounded shadow-sm" style="max-width: 500px; width: 100%;">
        <img src="/images/buddle_logo.svg" alt="Logo" class="mb-4" style="width: 100px;" />
        <h2 class="mb-4" style="font-size: 1.8rem;">Forgot Password?</h2>
        <p class="mb-4 text-muted" style="font-size: 1.2rem;">
            Enter your registered email address, and we’ll send you instructions to reset your password.
        </p>
        <form asp-action="VerifyEmail" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>

            <!-- Email Input -->
            <div class="mb-4">
                <input asp-for="Email" class="form-control" placeholder="Enter your email address" style="height: 50px; font-size: 1.1rem;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100 mb-4" style="height: 50px; font-size: 1.1rem;">
                <i class="bi bi-envelope-check"></i> Send Reset Instructions
            </button>

            <!-- Back to Login -->
            <div class="mt-3">
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none" style="font-size: 1.1rem;">
                    <i class="bi bi-arrow-left"></i> Back to Login
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
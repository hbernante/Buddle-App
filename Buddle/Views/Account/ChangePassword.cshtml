@using Buddle.Models.ViewModels;
@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="d-flex vh-100 align-items-center justify-content-center bg-light">
    <div class="register-account-container text-center bg-white p-5 rounded shadow-sm"
        style="max-width: 400px; width: 100%;">
        <img src="/images/buddle_logo.svg" alt="Logo" class="mb-4" style="width: 80px;" />
        <p class="mb-4 text-muted">
            Set a new password for your account.
        </p>
        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary"></div>

            <!-- Email (Read-only) -->
            <div class="mb-3">
                <input asp-for="Email" class="form-control text-muted bg-light" readonly placeholder="Email Address" />
            </div>

            <!-- New Password -->
            <div class="mb-3">
                <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <!-- Confirm New Password -->
            <div class="mb-3">
                <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm New Password" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100 mb-3">
                <i class="bi bi-key-fill"></i> Update Password
            </button>

            <!-- Back Link -->
            <div class="mt-3">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">
                    <i class="bi bi-arrow-left"></i> Back to Verify Email
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}